{
  "name": "feather-and-ink",
  "productName": "Feather-And-Ink",
  "description": "A visualization tool for your pen&paper character in the world of Aborea.",
  "productDescription": "A visualization tool for your pen&paper character in the world of Aborea.",
  "version": "0.1.0",
  "author": {
    "name": "Snekussaurier",
    "email": "snekussaurier@gmail.com",
    "url": "https://github.com/Snekussaurier"
  },
  "main": "public/main.js",
  "homepage": "./",
  "license": "Apache 2.0",
  "private": true,
  "build": {
    "extends": null,
    "appId": "com.snekussaurier.featherandink",
    "productName": "feather-and-ink",
    "copyright": "Copyright Snekussaurier",
    "files": [
      "build/**/*",
      "./public/main.js"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "./db/",
        "to": "db/",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@electron-forge/publisher-github": "^6.0.0-beta.67",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^7.3.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "nodemon": "^2.0.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-indiana-drag-scroll": "^2.2.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "react-svg": "^15.1.4",
    "sqlite3": "^5.1.2",
    "wait-on": "^6.0.1",
    "web-vitals": "^2.1.4",
    "yarn": "^1.22.19"
  },
  "scripts": {
    "start-react": "react-scripts start",
    "build-react": "react-scripts build",
    "start-electron": "nodemon --watch ./public/* --exec \"electron .\"",
    "dev": "concurrently \"yarn start-react\" \"wait-on http://localhost:3000 && yarn start-electron\" ",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "package": "react-scripts build && electron-forge package",
    "make": "react-scripts build && electron-forge make",
    "electron": "wait-on tcp:3000 && electron-forge start"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-react": "^7.18.6",
    "@electron-forge/cli": "^6.0.0-beta.67",
    "@electron-forge/maker-deb": "^6.0.0-beta.67",
    "@electron-forge/maker-rpm": "^6.0.0-beta.67",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.67",
    "@electron-forge/maker-zip": "^6.0.0-beta.67",
    "autoprefixer": "^10.4.8",
    "babel-loader": "^8.2.5",
    "electron": "^20.0.1",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.7"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-zip"
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "Snekussaurier",
              "name": "feather-and-ink"
            }
          }
        }
      ]
    }
  }
}
